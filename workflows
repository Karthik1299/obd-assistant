name: Deploy to Render
on:
  push:
    branches: [main]
jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Deploy Backend
        env:
          RENDER_API_KEY: ${{ secrets.RENDER_API_KEY }}
        run: curl -X POST https://api.render.com/v1/services/YOUR_BACKEND_SERVICE_ID/deploys -H "Authorization: Bearer $RENDER_API_KEY"
      - name: Deploy Frontend
        env:
          RENDER_API_KEY: ${{ secrets.RENDER_API_KEY }}
        run: curl -X POST https://api.render.com/v1/services/YOUR_FRONTEND_SERVICE_ID/deploys -H "Authorization: Bearer $RENDER_API_KEY"